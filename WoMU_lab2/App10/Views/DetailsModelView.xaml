<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ViewModels="using:App10.ViewModels"
      x:Class="App10.Views.DetailsModelView"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image Source="../Assets/Images/triforce_bg2.png"/>
        <StackPanel Orientation="Vertical"
                    Margin="20">

            <AppBarButton Icon="Back"
                          Click="GoToPreviousPage_OnClick"/>

            <TextBlock Name="titleBlock" 
                       Text="TaskDetails for "
                       FontWeight="Bold"
                       FontSize="25"/>

            <TextBlock Name="requirementsBlock" 
                    Text="Requirements"
                     Margin="0,05"
                     FontSize="15" />
            
            <TextBlock Name="startBlock" Text="Startdate: " Margin="0, 25, 0, 0"/>

            <TextBlock Name="deadlineBlock" Text="Deadline: " Margin="0,05"/>

            <TextBlock Name="userBlock" Text="Claimed By User: " Margin="0, 25"/>
        </StackPanel>
    </Grid>
</Page>
